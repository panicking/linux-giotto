/*
 * Definitions for Giotto DAC board
 */

/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2708";

	fragment@1 {
		target = <&i2s>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@2 {
		target = <&spi0>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			giotto-codec {
				#sound-dai-cells = <0>;
				compatible = "ti,pcm179x";
				reg = <0>;
				spi-max-frequency = <60000>;
				status = "okay";
			};
		};
	};

	fragment@3 {
		target = <&sound>;
		__overlay__ {
			compatible = "bcm2708,bcm2708-audio-giotto";
			i2s-controller = <&i2s>;
			nreset = <&gpio 5 1>;
			status = "okay";
		};
	};

	fragment@4 {
		target = <&spidev0>;
		__overlay__ {
			status = "disabled";
		};
	};

	fragment@5 {
		target = <&i2c1>;
		__overlay__ {
                        #address-cells = <1>;
                        #size-cells = <0>;
                        status = "okay";

                        ds1807@1 {
                                compatible = "maxim,ds1807";
                                reg = <0x28>;
                                status = "okay";
                        };

                        ds1807@2 {
                                compatible = "maxim,ds1807";
                                reg = <0x29>;
                                status = "okay";
                        };
                };
        };
};
